<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sahha.SahhaDemoActivity">

    <Button
        android:id="@+id/button_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="56dp"
        android:text="config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_authenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="authenticate"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_config"
        app:layout_constraintStart_toEndOf="@+id/button_config" />

    <Button
        android:id="@+id/button_enableSensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="4dp"
        android:text="enableSensors"
        app:layout_constraintStart_toEndOf="@+id/button_authenticate"
        app:layout_constraintTop_toTopOf="@+id/button_authenticate" />

    <Button
        android:id="@+id/button_getSensorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="getSensorStatus"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_postSensorData"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_postSensorData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="48dp"
        android:text="postSensorData"
        app:layout_constraintStart_toEndOf="@+id/button_getSensorStatus"
        app:layout_constraintTop_toBottomOf="@+id/button_config" />
</androidx.constraintlayout.widget.ConstraintLayout>